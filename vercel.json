{
  "version": 2,
  "github": {
    "enabled": false
  },
  "builds": [
    { "src": "./build/**", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "build/$1",
      "headers" : {
        "Content-Type": "application/json",
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/(.*)",
      "dest": "build/$1"
    }
  ]
}

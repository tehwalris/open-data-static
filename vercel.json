{
  "version": 2,
  "github": {
    "enabled": false
  },
  "builds": [
    { "src": "./build/**", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "build/$1",
      "headers" : [
        {
          "key" : "Content-Type",
          "value" : "application/rss+xml"
        },
        {
          "key" : "Cache-Control",
          "value" : "no-cache"
        }
      ]
    },
    {
      "src": "/(.*)",
      "dest": "build/$1"
    }
  ]
}
